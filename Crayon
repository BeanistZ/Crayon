        <script>
            $(document).ready(function () {
                var options = {
                    useEasing: true,
                    useGrouping: true,
                    separator: ',',
                    decimal: '.',
                    prefix: '$ ',
                    suffix: '+ (USD)'
                };
                $('.profit').each(function () {
                    var num = $(this).attr('numx'); //end count
                    var nuen = $(this).text();
                    if (nuen === "") {
                        nuen = 0;
                    }
                    var counts = new CountUp(this, nuen, num, 0, 1, options);
                    counts.start();
                });


            });
        </script>
        <script>
